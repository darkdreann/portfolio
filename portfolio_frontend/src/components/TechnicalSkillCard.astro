---
import { type TechnicalSkill } from '../types/technical_skill';
import SvgRender from './SvgRender.astro';

interface Props {
	technical_skill: TechnicalSkill;
}

const { technical_skill: technicalSkill } = Astro.props as Props;
---
<article>
	<SvgRender svg_string={technicalSkill.image} width='3rem' height='3rem' />
	<h5>{technicalSkill.name}</h5>
</article>

<style>
    article {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2vh;
        background-color: #1a2632;
        padding: 15px;
        border: #2f4f68 solid 1px;
        border-radius: 9px;
    }

    h5 {
        color: #FFFFFF;
        margin: 0;
        font-weight: 600;
    }
</style>